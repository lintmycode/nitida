<style>
.hosting {
  padding: 2rem 0;
}

.hosting-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xxxl);
  margin-top: var(--spacing-xxl);
  
  @media (max-width: 1023px) {
    gap: var(--spacing-lg);
    margin-top: var(--spacing-sm);
  }
}

.hero-section {
  text-align: center;
}

.hero-image-link {
  display: block;
  margin: 0 auto 3rem auto;
  width: fit-content;
}

.hero-image {
  width: 100%;
  height: auto;
  border-radius: var(--radius-sm);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.hero-image:hover {
  transform: translateY(-2px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
}

.hero-section h2,
.summer-offer h2,
.why-cloudways h2 {
  color: var(--accent-color);
  margin-bottom: 1rem;
  font-size: var(--font-size-large);
  text-transform: uppercase;
  letter-spacing: 2px;
  line-height: 1.2;
  
  @media (max-width: 1023px) {
    font-size: 1.5rem;
  }
}

.features-grid,
.advantages-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(40%, 1fr));
  gap: var(--spacing-xl);
  margin-top: var(--spacing-xxl);
}

.feature,
.advantage {
  height: fit-content;
  padding: var(--spacing-lg);
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: var(--radius-sm);
}

.feature h3,
.advantage h4 {
  font-size: var(--font-size-medium);
  margin-bottom: var(--spacing-md);
  text-transform: uppercase;
  letter-spacing: 2px;
  line-height: 1.2;
  color: #DDFF55;
  font-weight: bold;
}

.feature p,
.advantage p {
  line-height: 1.8;
  font-size: var(--font-size-medium);
  opacity: 0.9;
}

.summer-offer {
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: var(--radius-sm);
  padding: var(--spacing-lg);
  text-align: center;
}

.cloudways-benefits {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-md);
  margin: var(--spacing-lg) 0;
}

.benefit {
  height: fit-content;
  padding: var(--spacing-md);
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: var(--radius-sm);
}

.benefit h4 {
  color: #DDFF55;
  margin-bottom: var(--spacing-sm);
  font-size: var(--font-size-small);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  font-weight: bold;
}

.benefit p {
  line-height: 1.8;
  font-size: var(--font-size-medium);
  opacity: 0.9;
}

.cta-section {
  text-align: center;
  margin: var(--spacing-xl) 0;
  padding: var(--spacing-lg);
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: var(--radius-sm);
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.25rem;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  text-decoration: none;
  font-family: inherit;
  font-size: var(--font-size-small);
  text-transform: uppercase;
  letter-spacing: 1px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-sm);
  backdrop-filter: blur(10px);
  transition: all 0.1s ease-in-out;
  margin-bottom: 1rem;
}

.cta-button:hover {
  background: rgba(0, 0, 0, 0.9);
  border-color: #DDFF55;
  color: #DDFF55;
}

.cta-subtitle {
  display: block;
  font-size: 0.85em;
  font-weight: 400;
  margin-top: 0.25rem;
  opacity: 0.8;
}

.affiliate-notice {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.7);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.4;
}

.why-cloudways {
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: var(--radius-sm);
  padding: var(--spacing-lg);
  text-align: center;
}

@media (max-width: 768px) {
  .features-grid,
  .advantages-grid {
    grid-template-columns: 1fr;
  }
  
  .cloudways-benefits {
    grid-template-columns: 1fr;
  }
  
  .hero-image {
    width: 60%;
    max-width: 300px;
  }
}
</style>